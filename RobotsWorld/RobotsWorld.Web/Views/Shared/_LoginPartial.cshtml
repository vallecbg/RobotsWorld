@using Microsoft.AspNetCore.Identity
@using RobotsWorld.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark" asp-controller="Users" asp-action="Logout">Logout</a>
        </li>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a>
    </li>
}
</ul>